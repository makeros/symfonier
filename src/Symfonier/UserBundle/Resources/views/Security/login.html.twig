{% extends "SymfonierUserBundle::layout.html.twig" %}


{% block fos_user_content %}
<div class="container ">
{% if error %}
    <div class="alert alert-warning">{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}



    <form class="form-signin" role="form" action="{{ path("fos_user_security_check") }}" method="post">
        <h2 class="form-signin-heading">Logowanie</h2>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <input type="text" class="form-control" placeholder="Username" id="username" name="_username" value="{{ last_username }}" required="required" />
        <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" id="password" name="_password" required="required" />

        <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
      </form>


</div>
{% endblock fos_user_content %}
